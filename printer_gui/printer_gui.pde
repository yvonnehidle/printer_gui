/////////////////////////////////////////////////////
// MY RECIPE SCREEN - HOME
/////////////////////////////////////////////////////
void screenMyRecipes()
{
  pushStyle();
    noStroke();
    fill(0);
    textSize(40);
    // printer version
    text("AHHHHHHHHHHH!", width/2, barS+100);
  popStyle();
}
