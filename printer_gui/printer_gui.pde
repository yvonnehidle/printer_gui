/////////////////////////////////////////////////////
// GLOBAL VARIABLES
/////////////////////////////////////////////////////
float barS;
float barS2;
float buttonW;
float buttonH;
float buttonW2;
float buttonH2;
float iconSpacing;
float homeSize;
float infoSize;

PShape home;
PShape bright;
PShape info;

Navigation myNavigation;
/////////////////////////////////////////////////////


/////////////////////////////////////////////////////
// INTIALIZE
/////////////////////////////////////////////////////
void setup()
{
  size(1280,800);
  background(200);
  smooth();
  noStroke();
  textAlign(CENTER, CENTER);
  textSize(25);
  shapeMode(CENTER);
  
  // declare variables here
  barS = 150;
  barS2 = barS/2;
  buttonW = 320;
  buttonH = 75;
  buttonW2 = buttonW/2;
  buttonH2 = buttonH/2;
  iconSpacing = 70;
  homeSize = 70;
  infoSize = 65;
  
  home = loadShape("home.svg");
  bright = loadShape("brightness.svg");
  info = loadShape("info.svg");
  
  myNavigation = new Navigation();
}
/////////////////////////////////////////////////////


/////////////////////////////////////////////////////
// THE TABLE OF CONTENTS
/////////////////////////////////////////////////////
void draw()
{
  background(200);
  myNavigation.show();
  
  // go to myrecipes
  if(mouseX > 0 && mouseX < buttonW && mouseY > buttonH && mouseY < buttonH*2 && mousePressed == true)
  {
    screenMyRecipes();
  }
  else
  {
    screenWelcome();
  }
}
/////////////////////////////////////////////////////


/////////////////////////////////////////////////////
// WELCOME SCREEN
/////////////////////////////////////////////////////
void screenWelcome()
{
  pushStyle();
    noStroke();
    fill(0);
    textSize(40);
    // printer version
    text("G.E. Compact Food Printer A2.0b", width/2, barS+100);
    // welcome text
    textSize(30);
    text("Hello! What would you like to eat today?", width/2, barS+150);
  popStyle();
}
